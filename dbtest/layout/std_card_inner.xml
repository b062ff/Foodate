<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/global_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray1"
    android:backgroundTint="@color/gray1">

    <View
        android:id="@+id/divider_title"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:background="@color/gray1"
        android:elevation="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/image"
        android:layout_width="700dp"
        android:layout_height="700dp"
        android:layout_alignWithParentIfMissing="true"
        android:layout_marginTop="24dp"
        android:scaleType="centerCrop"
        android:elevation="0dp"
        app:layout_constraintEnd_toEndOf="@+id/divider_title"
        app:layout_constraintStart_toStartOf="@+id/divider_title"
        app:layout_constraintTop_toTopOf="@+id/divider_title"
        tools:src="@drawable/picture1" />

    <TextView
        android:id="@+id/title"
        style="@android:style/TextAppearance.Large.Inverse"
        android:layout_width="700dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@color/gray1"
        android:fontFamily="sans-serif-condensed"
        android:gravity="center_horizontal"
        android:padding="10dp"
        android:textColor="@color/white"
        android:textSize="48sp"
        android:textStyle="bold"
        android:elevation="0dp"
    app:layout_constraintBottom_toBottomOf="@+id/divider_title"
    app:layout_constraintEnd_toEndOf="@+id/image"
    app:layout_constraintHorizontal_bias="0.0"
    app:layout_constraintStart_toStartOf="@+id/image"
    app:layout_constraintTop_toBottomOf="@+id/image"
    app:layout_constraintVertical_bias="0.0"
    tools:text="Title" />

</androidx.constraintlayout.widget.ConstraintLayout>
